{
  "name": "mono-koto.github.io",
  "version": "1.0.0",
  "repository": "https://github.com/mono-koto/mono-koto.github.io.git",
  "author": "burnto <brent@mono-koto.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite ./src",
    "build": "mkdir -p dist && vite build ./src && cp src/CNAME dist/",
    "preview": "vite preview ./src",
    "clean": "shx rm -rf dist/*",
    "push-gh-pages": "push-dir --dir=dist --branch=gh-pages --cleanup --verbose",
    "deploy": "yarn clean && yarn build && yarn push-gh-pages"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.25",
    "push-dir": "^0.4.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.1",
    "shx": "^0.3.4"
  },
  "staticFiles": {
    "staticPath": [
      "static/CNAME"
    ]
  }
}
